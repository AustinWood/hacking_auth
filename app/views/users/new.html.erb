<h1>Sign Up</h1>

<form action="<%= users_url %>" method="post">
  <%= auth_token %>

  <label>Username
    <br>
    <input type="text" name="user[username]" value="<%= @user.username %>">
  </label>

  <br><br>

  <label>Password
    <br>
    <input type="password" name="user[password]">
  </label>

  <br><br>

  <input type="submit" value="Sign Up">

  <br>

  <p><i>Already have an account? <%= link_to "Log In", new_session_url , method: :get %> here </i></p>

</form>
