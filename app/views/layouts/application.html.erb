<!DOCTYPE html>
<html>
<head>
  <title>HackingAuth</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= "Logged in as: #{current_user.username}" if current_user %> <%= button_to "Sign Out", session_url, method: :delete if current_user %>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  <% end %>

<%= yield %>

</body>
</html>
